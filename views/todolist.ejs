<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= currentDate %></h1>
    </div>

    <div class="box">
        
            <%  for(let i =0; i<toDoItems.length ; i++){  %>
                <div class="item">
                    <input type="checkbox" >
                    <p> <%= toDoItems[i] %></p>
                </div>        
            <%  } %>
        
            <form class ="item" action="/" method="post">
                <input type="text" name="item" placeholder="New Item...." autocomplete="off">
                <button type="submit" name="list" value="<%= currentDate %>">+</button>
            </form>
    </div>

